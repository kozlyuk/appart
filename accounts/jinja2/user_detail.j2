{% extends "base.j2" %}

{% block content %}
<div class="container-fluid">
    <div class="container">
        <div class="col-lg-12">
            <div class="card c_grid c_yellow">
                <div class="body text-center">
                    <div class="circle">
                        <img class="rounded-circle" src="https://picsum.photos/100" alt="">
                    </div>
                    {% if user.name %}
                    <h6 class="mt-3 mb-0">{{ user.name }}</h6>
                    {% endif %}
                    <span>{{ user.email }}</span>
                    <ul class="mt-3 list-unstyled d-flex justify-content-center">
                        <li><a class="p-3" target="_blank" href="mailto:{{ user.email }}"><i class="fas fa-at"></i></a></li>
                        {# <li><a class="p-3" target="_blank" href="#"><i class="fa fa-slack"></i></a></li>
                        <li><a class="p-3" target="_blank" href="#"><i class="fa fa-linkedin"></i></a></li> #}
                    </ul>
                    {# <button class="btn btn-default btn-sm">Follow</button>
                    <button class="btn btn-default btn-sm">Message</button> #}
                </div>
            </div>
            <div class="card">
                <div class="header">
                    <h2 class="text-center">{{ _('User info') }}</h2>
                </div>
                <ul class="list-group">
                    {% if user.email %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('User email: ') }} </small>
                        <p class="mb-0">{{ user.email }}</p>
                    </li>
                    {% endif %}
                    {% if user.mobile_number %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Mobile number: ') }}</small>
                        <p class="mb-0">{{ user.mobile_number }}</p>
                    </li>
                    {% endif %}
                    {% if user.birth_date %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Birth date: ') }}</small>
                        <p class="mb-0">{{ user.birth_date }}</p>
                    </li>
                    {% endif %}
                    <div class="btn-toolbar justify-content-between mt-2">
                        <button type="submit" onclick="window.location.href = '{{url('accounts_User_list')}}'"
                            class="btn btn-info text-right">{{ _('Return') }}</button>
                        <button type="submit"
                            onclick="window.location.href = '{{url('accounts_User_update', kwargs={'pk': user.pk})}}'"
                            class="btn btn-warning text-right">{{ _('Edit') }}</button>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</div>

                
{% endblock content %}