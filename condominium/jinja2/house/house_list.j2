{% extends "main.j2" %}

{% block content %}
<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a href="{{url('condominium_House_create')}}" class="btn btn-sm btn-primary btn-round" title=""> {{ _('Add New house') }}</a>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="tab-content mt-0">
                <div class="tab-pane active show" id="Users">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom spacing8">
                            <thead>
                                <tr>
                                    <th class="w60">{{ _('House photo') }}</th>
                                    <th class="w100">{{ _('House name') }}</th>
                                    <th></th>
                                    <th>{{ _('Address') }}</th>
                                    <th class="w200">{{ _('Appartments count') }}</th>
                                    <th class="w100">{{ _('Action') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for house in houses.all() %}
                                <tr>
                                    <td class="width45">
                                        <img src="https://picsum.photos/100" data-toggle="tooltip" data-placement="top" title="" alt="Avatar" class="w35 h35 rounded" data-original-title="Avatar Name" aria-describedby="tooltip889898">
                                    </td>
                                    <td>
                                        <a href="{{url('condominium_House_detail', kwargs={'pk':house.pk})}}">
                                            <h6 class="mb-0">{{ house }}</h6>
                                        </a>
                                        <span><!--{{ lipsum(n=2, html=False, min=1, max=2) }}--></span>
                                    </td>
                                    <td><!--<span class="badge badge-danger">Super Admin</span>--></td>
                                    <td>{{ house.address }}</td>
                                    <td>{{ house.apartments_count }}</td>
                                    <td>
                                    <button type="button" class="btn btn-sm btn-warning" title="{{ _('Edit') }}" onclick="window.location.href = '{{url('condominium_House_update', kwargs={'pk':house.pk})}}'"><i class="fa fa-edit"></i></button>
                                    <button type="button" class="btn btn-sm btn-danger" title="{{ _('Edit') }}" onclick="window.location.href = '{{url('condominium_House_delete', kwargs={'pk':house.pk})}}'"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}