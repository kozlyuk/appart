{% extends "main.j2" %}

{% block content %}
<div class="container text-center mt-4">
    <div class="card text-white bg-danger mb-3" style="max-width: 32rem;">
        <div class="card-header">{% if apartments %}{{ _('Delete error') }}{% else %}{{ _('Confirm delete') }}{% endif %}</div>
        <div class="card-body">
            {% if apartments %}
            <h5 class="card-title">{{house}} {{ _('removal is forbidden') }}</h5>
                <label>{{ _('You need to delete these objects first: ') }}</label>
                {% for apartment in apartments %}
                    <ul>{{ loop.index }}. <strong><a href="{{url('condominium_Apartment_update', kwargs={'pk': apartment.pk})}}">{{ _('Apartment number:') }} {{apartment}}</a></strong></ul>
                {% endfor %}
            {% else %}
            <h5 class="card-title">{{ _('Delete') }} {{house}} ?</h5>
            <form action="" method="post">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <button type="button" onclick="window.location.href = '{{url('condominium_House_list')}}'" class="btn btn-sm btn-success mr-1">{{ _('Ні, повернутися назад') }}</button>
                <button type="submit" class="btn btn-sm btn-danger ml-1">{{ _('Так') }}</button>
            </form>
            {% endif %}
        </div>
    </div>
</div>

{% endblock content %}