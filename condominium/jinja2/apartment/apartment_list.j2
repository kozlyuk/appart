{% extends "main.j2" %}

{% block title %}
{{ _('Apartment list') }}
{% endblock title %}

{% block content %}
<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a href="{{url('condominium_Apartment_create')}}" class="btn btn-sm btn-primary btn-round" title=""> {{ _('Add New apartment') }}</a>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="tab-content mt-0">
                <div class="tab-pane active show" id="Users">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom spacing8">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th class="w100">{{ _('Apartment number') }}</th>
                                    <th class="w200">{{ _('House') }}</th>
                                    <th>{{ _('Area') }}</th>
                                    <th>{{ _('Resident') }}</th>
                                    <th class="w100">{{ _('Action') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for apartment in apartments.all() %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>
                                        <a href="{{url('condominium_House_detail', kwargs={'pk':apartment.pk})}}">
                                            <h6 class="mb-0">{{ apartment }}</h6>
                                        </a>
                                        <span><!--{{ lipsum(n=2, html=False, min=1, max=2) }}--></span>
                                    </td>
                                    <td>{{ apartment.house }}</td>
                                    <td>{{ apartment.area }}</td>
                                    <td>{{ apartment.resident }}</td>
                                    <td>
                                    <button type="button" class="btn btn-sm btn-warning" title="{{ _('Edit') }}" onclick="window.location.href = '{{url('condominium_Apartment_update', kwargs={'pk':apartment.pk})}}'"><i class="fa fa-edit"></i></button>
                                    <button type="button" class="btn btn-sm btn-danger" title="{{ _('Edit') }}" onclick="window.location.href = '{{url('condominium_Apartment_delete', kwargs={'pk':apartment.pk})}}'"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}