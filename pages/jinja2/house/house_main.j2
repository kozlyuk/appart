{% extends "house_base.j2" %}

{% block title %}
House page
{% endblock title %}

{% block content %}
<div class="container-flex">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <img src="{{ house.logo.url }}" class="card-img-top" alt="{{ _('House image') }}">
                <div class="card-body">
                    <h5 class="card-title">{{ house.name }}</h5>
                    <p class="card-text mb-2">{{ _('House address') }} : {{ house.address }}</p>
                    <p class="card-text mb-2">{{ _('House description') }} : {{ house.description }}</p>
                    <a href="#" class="btn btn-common">{{ _('Go to personal cabinet') }}</a> <!-- TODO: add url to cabinet -->
                </div>
            </div>
            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">{{ _('Contact list') }}</h5>
                    <ul>
                        <li>Some tel. nubmer: <strong>101</strong></li>
                        <li>Some tel. nubmer: <strong>102</strong></li>
                        <li>Some tel. nubmer: <strong>911</strong></li>
                    </ul>
                </div>
            </div>
            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">{{ _('Voting about some shit') }}</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label" for="defaultCheck1">
                            Agree
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                        <label class="form-check-label" for="defaultCheck2">
                            Disagree
                        </label>
                    </div>
                    <button class="btn btn-sm btn-common mt-2">{{ _('Submit') }}</button>
                </div>
            </div>
        </div>
        {% include "house/widgets/news_list.j2" %}
    </div>
</div>


{% endblock content %}