{% if form.errors %}
<style>
.toast {
    opacity: 1;
    background-color: #282b2f;
}

.alert {
    padding: 0;
    border: none;
    background-color: transparent;
}
.alert-danger {
    color: #bbbec2;
}

.alert-danger-2 {
    color: red;
}

</style>
<div style='position: fixed; bottom: 0; right: 3%; z-index: 100'>
    {% for field in form %}
        {% if field.errors %}
            <div class="alert alert-danger">
                <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header alert-header">
                        <strong class="mr-auto">{{ field.label }}</strong>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        {{ field.errors|striptags }}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>



{% endif %}