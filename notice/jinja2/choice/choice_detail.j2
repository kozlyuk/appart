{% extends "main.j2" %}

{% block title %}
Choice detail: {{ choice.question }}
{% endblock title %}

{% block content %}
<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="header">
                    <h2 class="text-center">{{ _('Choice: ') }} {{ object.question }}</h2>
                </div>
                <ul class="list-group row">
                    {% if object.question %}
                        <li class="list-group-item">
                            <small class="text-muted">{{ _('Question: ') }}</small>
                            <p class="mb-0">{{ object.question }}</p>
                        </li>
                    {% endif %}
                    {% if object.user %}
                        <li class="list-group-item">
                            <small class="text-muted">{{ _('Users: ') }}</small>
                            <p class="mb-0">{{ object.user }}</p>
                        </li>
                    {% endif %}
                    {% if object.choice_text %}
                        <li class="list-group-item">
                            <small class="text-muted">{{ _('Choice text: ') }}</small>
                            <p class="mb-0">{{ object.choice_text|safe }}</p>
                        </li>
                    {% endif %}
                    {% if object.votes %}
                        <li class="list-group-item">
                            <small class="text-muted">{{ _('Votes: ') }}</small>
                            <p class="mb-0">{{ object.votes }}</p>
                        </li>
                    {% endif %}
                </ul>

            </div>
            <div class="btn-toolbar justify-content-between mt-2">
                <button type="submit" onclick="window.location.href = '{{ url('notice_Choice_list') }}'"
                        class="btn btn-info text-right">{{ _('Return') }}</button>
                    <button type="submit"
                        onclick="window.location.href = '{{ url('notice_Choice_update', kwargs={'pk':object.pk}) }}'"
                        class="btn btn-warning text-right">{{ _('Edit') }}</button>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock content %}