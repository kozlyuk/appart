{% extends "main.j2" %}

{% block title %}
{{ _('Question:') }} {{ object.question_text }}
{% endblock title %}

{% block content %}
<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="header">
                    <h2 class="text-center">{{ _('Question: ') }} {{ object.question_text|safe }}</h2>
                </div>
                <ul class="list-group">
                    {% if object.actual_from %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Actual from:') }}</small>
                        <p class="mb-0">{{ object.actual_from }}</p>
                    </li>
                    {% endif %}
                    {% if object.actual_to %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Actual to:') }}</small>
                        <p class="mb-0">{{ object.actual_to }}</p>
                    </li>
                    {% endif %}
                    {% if object.created_by %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Created by:') }}</small>
                        <p class="mb-0">{{ object.created_by }}</p>
                    </li>
                    {% endif %}
                    {% if object.date_created %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Date created:') }}</small>
                        <p class="mb-0">{{ object.date_created }}</p>
                    </li>
                    {% endif %}
                    {% if object.date_updated %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ _('Date updated:') }}</small>
                        <p class="mb-0">{{ object.date_updated }}</p>
                    </li>
                    {% endif %}

                </ul>
            </div>
            <div class="btn-toolbar justify-content-between mt-2">
                <button type="submit" onclick="window.location.href = '{{ url('notice_Question_list') }}'"
                    class="btn btn-info text-right">{{ _('Return') }}</button>
                <button type="submit"
                    onclick="window.location.href = '{{ url('notice_Question_update', kwargs={'pk':object.pk}) }}'"
                    class="btn btn-warning text-right">{{ _('Edit') }}</button>
            </div>
        </div>
    </div>
</div>
{% endblock content %}