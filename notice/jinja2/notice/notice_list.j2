{% extends "main.j2" %}
{% block title %}
{{ _('News list') }}
{% endblock title %}

{% block content %}
<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a href="{{ url('notice_Notice_create') }}" class="btn btn-sm btn-primary btn-round" title=""> {{ _('Add New news') }}</a>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="tab-content mt-0">
                <div class="tab-pane active show" id="Users">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom spacing8">
                            <thead>
                                <tr>
                                    <th>{{ _('Title') }}</th>
                                    <th>{{ _('Notice type') }}</th>
                                    <th>{{ _('Notice status') }}</th>
                                    <th>{{ _('Actual time') }}</td>
                                    <th class="w100">{{ _('Action') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for notice in notices.all() %}
                                <tr>
                                    <td><a href="{{ url('notice_Notice_detail', kwargs={'pk': notice.pk}) }}">{{ notice.title }}</a></td>
                                    <td>{{ notice.get_notice_type_display() }}</td>
                                    <td>{{ notice.get_notice_status_display() }}</td>
                                    <td>{{ _('From ') }}{{ notice.actual_from }}{{ _(' to ') }}{{ notice.actual_to }}</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning" title="{{ _('Edit') }}" onclick="window.location.href = '{{url('notice_Notice_update', kwargs={'pk':notice.pk})}}'"><i class="fa fa-edit"></i></button>
                                        <button type="button" class="btn btn-sm btn-danger" title="{{ _('Delete') }}" onclick="window.location.href = '{{url('notice_Notice_delete', kwargs={'pk':notice.pk})}}'"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}